<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.david_swift.Flashcards</id>

  <name>Flashcards</name>
  <summary>Study flashcards</summary>

  <metadata_license>MIT</metadata_license>
  <project_license>LGPL-3.0-or-later</project_license>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <description>
    <p>
      Flashcards is a native GNOME app that stores your flashcard sets.
      It enables you to create, edit, view, and study sets.
      Use the test mode for creating a preparation exam.

      You can easily import existing Quizlet sets.
    </p>
  </description>

  <launchable type="desktop-id">io.github.david_swift.Flashcards.desktop</launchable>
</component>

